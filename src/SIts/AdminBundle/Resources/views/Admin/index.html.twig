{% extends "SItsAdminBundle::admin.html.twig" %}

{% block title %}Utilisateurs{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Dashboard</h1>
        </div>
    </div>
    
    <div class="col-lg-6">
        {{ include ("SItsUserBundle:User:partials/index.html.twig", {entities : users, actions : false}) }}
    </div>
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">Actualit√©s</div>
                
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="dataTables_length" id="dataTables-example_length">
                                        <label>
                                            Show
                                            <select name="dataTables-example_length" aria-controls="dataTables-example" class="form-control input-sm">
                                                <option value="0">0</option>
                                                <option value="25">25</option>
                                                <option value="50">50</option>
                                                <option value="100">100</option>
                                            </select>
                                        </label>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-sm-12">
                                    <table class="table table-striped table-bordered table-hover table-condensed" id="dataTables-example" role="grid">
                                        <thead>
                                            <tr>
                                                <th>Id</th>
                                                <th>Nom d'utilisateur</th>
                                                <th>Roles</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        {% for entity in users %}
                                            <tr>
                                                <td><a href="{{ path('admin_user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                                                <td><a href="{{ path('admin_user_show', { 'id': entity.id }) }}">{{ entity.username }}</a></td>
                                                <td>
                                                    {% for role in entity.roles %}
                                                        {{ role |replace({ ('ROLE_'): '' })}}{% if not loop.last %},{% endif %}
                                                    {% endfor %}
                                                </td>
                                                
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
	
{% endblock %}

{% block documentReady %}
    $('#dataTables-user').DataTable( {
        "paging":   true,
        "ordering": true,
        "info":     false
    } );
{% endblock %}
