
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">Utilisateurs</div>
                
                <div class="panel-body">
                    <div class="sitsTable_wrapper">
                        <div id="dataTables-user_wrapper" class="dataTables_wrapper">                       
                            <div class="row">
                                <div class="col-sm-12">
                                    <table class="table table-striped table-bordered table-hover table-condensed" id="dataTables-user" role="grid">
                                        <thead>
                                            <tr>
                                                <th class="sorting">Id</th>
                                                <th class="sorting">Nom d'utilisateur</th>
                                                <th class="sorting">Nom</th>
                                                <th class="sorting">Pr√©nom</th>
                                                <th class="sorting">Roles</th>
                                                {% if (actions) %}
                                                    <th class="admin-actions"></th>
                                                {% endif %}
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for entity in entities %}
                                                <tr>
                                                    <td><a href="{{ path('admin_user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                                                    <td><a href="{{ path('admin_user_show', { 'id': entity.id }) }}">{{ entity.username }}</a></td>
                                                    <td>{{ entity.lastname }}</td>
                                                    <td>{{ entity.firstname }}</td>
                                                    <td>
                                                        {% for role in entity.roles %}
                                                            {{ role |replace({ ('ROLE_'): '' })}}{% if not loop.last %},{% endif %}
                                                        {% endfor %}
                                                    </td>
                                                    {% if (actions) %}
                                                        <td>
                                                                <div class="btn-group admin-button">
                                                                    <a class="btn btn-primary" href="{{ path('admin_user_show', { 'id': entity.id }) }}"><span class="fa fa-search"></span>{% trans %}Voir{% endtrans %}</a>
                                                                    <a class="btn btn-primary" href="{{ path('admin_user_edit', { 'id': entity.id }) }}"><span class="fa fa-edit"></span>{% trans %}Editer{% endtrans %}</a>
                                                                </div>
                                                        </td>
                                                    {% endif %}
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
{% block documentReady %}

{% endblock %}
    
            