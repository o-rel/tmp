{% extends "SItsAdminBundle::admin.html.twig" %}

{% block title %}Utilisateurs{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Liste des utilisateurs</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">Utilisateurs</div>
                
                <div class="panel-body">
                    <div class="sitsTable_wrapper">
                        <div id="dataTables-example_wrapper" class="sitsTables_wrapper">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="dataTables_length" id="dataTables-example_length">
                                        <label>
                                            Show
                                            <select name="dataTables-example_length" aria-controls="dataTables-example" class="form-control input-sm">
                                                <option value="0">0</option>
                                                <option value="25">25</option>
                                                <option value="50">50</option>
                                                <option value="100">100</option>
                                            </select>
                                        </label>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-sm-12">
                                    <table class="table table-striped table-bordered table-hover table-condensed" id="dataTables-example" role="grid">
                                        <thead>
                                            <tr>
                                                <th class="sorting">Id</th>
                                                <th class="sorting">Nom d'utilisateur</th>
                                                <th class="sorting">Nom</th>
                                                <th class="sorting">Pr√©nom</th>
                                                <th class="sorting">Roles</th>
                                                <th class="admin-actions"></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        {% for entity in entities %}
                                            <tr>
                                                <td><a href="{{ path('admin_user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                                                <td><a href="{{ path('admin_user_show', { 'id': entity.id }) }}">{{ entity.username }}</a></td>
                                                <td>{{ entity.lastname }}</td>
                                                <td>{{ entity.firstname }}</td>
                                                <td>
                                                    {% for role in entity.roles %}
                                                        {{ role |replace({ ('ROLE_'): '' })}}{% if not loop.last %},{% endif %}
                                                    {% endfor %}
                                                </td>
                                                <td>
                                                    <div class="btn-group admin-button">
                                                        <a class="btn btn-primary" href="{{ path('admin_user_show', { 'id': entity.id }) }}"><span class="fa fa-search"></span>{% trans %}Voir{% endtrans %}</a>
                                                        <a class="btn btn-primary" href="{{ path('admin_user_edit', { 'id': entity.id }) }}"><span class="fa fa-edit"></span>{% trans %}Editer{% endtrans %}</a>
                                                    </div>                
                                                </td>
                                                
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            
            
        </div>
    </div>
	
{% endblock %}
